        <script>
            function confirmOrder() {
                let ele = document.getElementsByName("Transfer");
                let check = 0;
                for (i = 0; i < ele.length; i++) {
                    if (ele[i].checked) {
                        check = 1;
                        break;
                    }
                }
                if (check === 0){
                    window.alert("Please Choose Your Payment Method!");
                } else {
                    document.getElementById("Comple").submit();
                }
            }
        </script>
